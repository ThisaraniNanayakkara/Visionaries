<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sub_total"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_card">

    <TextView
        android:id="@+id/bar_btm"
        android:layout_width="394dp"
        android:layout_height="63dp"
        android:background="@color/top_tab_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/bar_top"
        android:layout_width="394dp"
        android:layout_height="63dp"
        android:background="@color/top_tab_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/im_menu"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/bar_search"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="@+id/bar_top"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu2" />

    <ImageView
        android:id="@+id/btn_notification"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="@+id/bar_top"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/notification" />

    <EditText
        android:id="@+id/bar_search"
        android:layout_width="210dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/roundstyle"
        android:ems="10"
        android:gravity="center"
        android:hapticFeedbackEnabled="false"
        android:hint="@string/btn_searches"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.338"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/img_search"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/bar_search"
        app:layout_constraintHorizontal_bias="0.973"
        app:layout_constraintStart_toStartOf="@+id/bar_search"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/search" />

    <ImageView
        android:id="@+id/img_cart"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/bar_top"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_notification"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cart" />

    <ImageView
        android:id="@+id/btn_home"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/img_cart_btm"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/bar_btm"
        app:layout_constraintStart_toEndOf="@+id/btn_home"
        app:srcCompat="@drawable/cart" />

    <ImageView
        android:id="@+id/btn_prescription"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_cart_btm"
        app:layout_constraintTop_toTopOf="@+id/bar_btm"
        app:layout_constraintVertical_bias="0.285"
        app:srcCompat="@drawable/prescription" />

    <ImageView
        android:id="@+id/btn_user"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bar_btm"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_prescription"
        app:layout_constraintTop_toTopOf="@+id/bar_btm"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/cpayment_title"
        android:layout_width="289dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/baloo_bhaina"
        android:gravity="center"
        android:text="@string/new_card_payment"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar_top" />

    <Button
        android:id="@+id/cart_back"
        android:layout_width="272dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:text="@string/back"
        app:backgroundTint="@color/top_tab_color"
        app:layout_constraintBottom_toTopOf="@+id/bar_btm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cart_pay"
        android:layout_width="272dp"
        android:layout_height="50dp"
        android:text="@string/spayment_pay"
        app:backgroundTint="@color/top_tab_color"
        app:layout_constraintBottom_toTopOf="@+id/cart_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/first_box2"
        android:layout_width="381dp"
        android:layout_height="326dp"
        android:background="@drawable/boxstyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cpayment_title" />

    <TextView
        android:id="@+id/subtotal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="144dp"
        android:text="@string/subtotal"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/bar_btm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.297"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollview"
        app:layout_constraintVertical_bias="0.135" />

    <TextView
        android:id="@+id/grand_total2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="112dp"
        android:text="@string/grandtotal"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/bar_btm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.309"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollview"
        app:layout_constraintVertical_bias="0.358" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:text="Rs. 525"
        android:textColor="#100E0E"
        app:layout_constraintBaseline_toBaselineOf="@+id/subtotal2"
        app:layout_constraintStart_toEndOf="@+id/subtotal2" />

    <TextView
        android:id="@+id/price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="Rs. 525"
        android:textColor="#100E0E"
        app:layout_constraintBaseline_toBaselineOf="@+id/grand_total2"
        app:layout_constraintStart_toEndOf="@+id/grand_total2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="132dp"
        android:text="@string/card_num"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/first_box2"
        app:layout_constraintTop_toBottomOf="@+id/cpayment_title" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="12dp"
        android:text="@string/cname"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/cName"
        app:layout_constraintEnd_toEndOf="@+id/first_box2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/card_name"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/first_box2"
        app:layout_constraintTop_toBottomOf="@+id/card_num" />

    <TextView
        android:id="@+id/order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="132dp"
        android:text="Expiry"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/cpayment_title" />

    <TextView
        android:id="@+id/card_cvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="16dp"
        android:text="CVV"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/card_expiry" />

    <EditText
        android:id="@+id/card_num"
        android:layout_width="202dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/blackboxstyle"
        android:ems="10"
        android:inputType="number"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toStartOf="@+id/first_box2"
        app:layout_constraintTop_toTopOf="@+id/first_box2"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/card_name"
        android:layout_width="202dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="224dp"
        android:background="@drawable/blackboxstyle"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toStartOf="@+id/first_box2"
        app:layout_constraintTop_toTopOf="@+id/first_box2"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/cvv"
        android:layout_width="98dp"
        android:layout_height="36dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/blackboxstyle"
        android:ems="10"
        android:inputType="number"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@+id/first_box2"
        app:layout_constraintTop_toTopOf="@+id/first_box2"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/card_expiry"
        android:layout_width="98dp"
        android:layout_height="36dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/blackboxstyle"
        android:ems="10"
        android:inputType="number"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@+id/first_box2"
        app:layout_constraintTop_toTopOf="@+id/first_box2"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/cName"
        android:layout_width="98dp"
        android:layout_height="36dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="148dp"
        android:background="@drawable/blackboxstyle"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@+id/first_box2"
        app:layout_constraintTop_toTopOf="@+id/first_box2"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="67dp"
        android:layout_height="40dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="276dp"
        android:text="Save"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/first_box2"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="73dp"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar_top"
        app:srcCompat="@drawable/creditcard" />

</androidx.constraintlayout.widget.ConstraintLayout>